<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sobre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jumpers.delta.sistemasparainter.net.appdelta.Sobre">

    <TextView
        android:text="Sobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sobTitle"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:text="Alexandre Trino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/sobNome1"
        android:layout_alignTop="@+id/sobIntegrante1"
        android:layout_toEndOf="@+id/sobTitle"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/darker_gray"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:id="@+id/sobIntegrante1"
        android:src="@drawable/breno"
        android:layout_below="@+id/sobTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Anderson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/sobNome2"
        android:layout_alignTop="@+id/sobIntegrante2"
        android:layout_toEndOf="@+id/sobTitle"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/darker_gray"
        android:layout_marginTop="28dp"
        android:id="@+id/sobIntegrante2"
        android:src="@drawable/anderson"
        android:layout_below="@+id/sobIntegrante1"
        android:layout_alignStart="@+id/sobIntegrante1" />

    <TextView
        android:text="Breno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sobNome3"
        android:layout_alignTop="@+id/sobIntegrante3"
        android:layout_alignStart="@+id/sobNome2"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/darker_gray"
        android:layout_marginTop="28dp"
        android:id="@+id/sobIntegrante3"
        android:src="@drawable/breno"
        android:layout_below="@+id/sobIntegrante2"
        android:layout_alignStart="@+id/sobIntegrante2" />
    <TextView
        android:text="Eliana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sobNome4"
        android:layout_above="@+id/sobIntegrante5"
        android:layout_alignStart="@+id/sobNome3"
        android:layout_marginBottom="13dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/darker_gray"
        android:layout_marginTop="28dp"
        android:id="@+id/sobIntegrante4"

        android:layout_below="@+id/sobIntegrante3"
        android:layout_alignStart="@+id/sobIntegrante3" />

    <TextView
        android:text="Laura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sobNome5"
        android:layout_alignTop="@+id/sobIntegrante5"
        android:layout_alignStart="@+id/sobNome4"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/darker_gray"
        android:layout_marginTop="28dp"
        android:id="@+id/sobIntegrante5"
        android:src="@drawable/laura"
        android:layout_below="@+id/sobIntegrante4"
        android:layout_alignStart="@+id/sobIntegrante4"
        />


    <TextView
        android:id="@+id/sobDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="App criado para o Projeto Integrador do Senac" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WJumpers develop"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/sobTitle"
        android:layout_alignBottom="@+id/sobTitle"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
