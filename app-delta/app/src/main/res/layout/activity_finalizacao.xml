<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finalizacao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jumpers.delta.sistemasparainter.net.appdelta.FinalizacaoActivity">

    <TextView
        android:id="@+id/finTransacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Transação"
        android:textSize="36sp" />

    <Button
        android:text="Voltar à Loja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="142dp"
        android:id="@+id/finVoltarLoja"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_below="@+id/finTransacao"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:id="@+id/finImageP" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_below="@+id/finImageP"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/finImagePT" />

    <TextView
        android:id="@+id/finProdutoP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/finImageP"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/finImageP"
        android:text="Produto1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/finProdutoPt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/finProdutoP"
        android:layout_alignTop="@+id/finImagePT"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/finImageP"
        android:text="Produto 2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/finPrecoP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/finProdutoPt"
        android:layout_below="@+id/finProdutoP"
        android:text="R$ 99,90"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/finPrecoPt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/finProdutoPt"
        android:layout_below="@+id/finProdutoPt"
        android:text="R$ 10,90"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/finTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/finPrecoPt"
        android:layout_marginTop="35dp"
        android:text="TOTAL: R$ 100,90"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/finPagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/finTotal"
        android:layout_marginTop="12dp"
        android:text="Pagamento: Cartão"
        android:textSize="20sp" />

    <TextView
        android:text="ID-XXXXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/finTransacao"
        android:layout_toEndOf="@+id/finTransacao"
        android:layout_marginStart="19dp"
        android:textSize="36sp"
        android:id="@+id/finXx" />
</RelativeLayout>
