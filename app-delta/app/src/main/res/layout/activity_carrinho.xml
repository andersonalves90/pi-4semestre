<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_carrinho"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jumpers.delta.sistemasparainter.net.appdelta.CarrinhoActivity">

    <TextView
        android:text="Carrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"
        android:id="@+id/carCarrinho" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_below="@+id/carCarrinho"
        android:layout_alignStart="@+id/carCarrinho"
        android:layout_marginTop="25dp"
        android:id="@+id/carImagemP" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_below="@+id/carImagemP"
        android:layout_alignStart="@+id/carImagemP"
        android:layout_marginTop="98dp"
        android:id="@+id/carImagemPT" />

    <TextView
        android:text="Produto 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/carImagemP"
        android:layout_toEndOf="@+id/carCarrinho"
        android:layout_marginStart="22dp"
        android:id="@+id/carProdutoP" />

    <TextView
        android:text="R$ 2,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carImagemP"
        android:layout_alignEnd="@+id/carProdutoP"
        android:id="@+id/carPrecoP" />

    <TextView
        android:text="Produto 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/carImagemPT"
        android:layout_alignStart="@+id/carProdutoP"
        android:id="@+id/carProdutoPT" />

    <TextView
        android:text="R$ 2,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carImagemPT"
        android:layout_alignEnd="@+id/carProdutoPT"
        android:id="@+id/carPrecoPT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/carRecebePrecoP"
        android:layout_below="@+id/carPrecoPT"
        android:layout_alignStart="@+id/carProdutoPT"
        android:layout_marginTop="19dp"
        android:layout_alignEnd="@+id/carPrecoPT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/carPrecoP"
        android:layout_alignStart="@+id/carProdutoPT"
        android:layout_marginTop="18dp"
        android:id="@+id/carRecebePrecoPT"
        android:layout_alignEnd="@+id/carPrecoP" />

    <TextView
        android:text="Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carRecebePrecoPT"
        android:layout_alignStart="@+id/carImagemPT"
        android:layout_marginTop="33dp"
        android:id="@+id/carTotal" />

    <TextView
        android:text="R$ 4,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/carTotal"
        android:layout_alignParentEnd="true"
        android:id="@+id/carPrecoTotal" />

    <Button
        android:text="Continuar Comprando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/carContCompra"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/carPagamento" />

    <Button
        android:text="Ir para pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carPagamento"
        android:layout_alignBottom="@+id/carContCompra"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/carContCompra" />

</RelativeLayout>
