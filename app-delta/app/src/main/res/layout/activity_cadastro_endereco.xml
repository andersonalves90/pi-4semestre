<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_endereco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jumpers.delta.sistemasparainter.net.appdelta.CadastroEnderecoActivity">

    <TextView
        android:text="Cadastro de endereço"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cedCadastro"
        android:layout_alignParentTop="true" />

    <Button
        android:text="Cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cedBtnCadastrar"
        android:layout_below="@+id/editTextUf"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextTipoEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cedCadastro"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Tipo de Endereço"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextCEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextTipoEndereco"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        android:hint="CEP" />

    <EditText
        android:id="@+id/editTextLogradouro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextCEP"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Logradouro" />

    <EditText
        android:id="@+id/editTextNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextLogradouro"
        android:layout_below="@+id/editTextLogradouro"
        android:ems="10"
        android:inputType="number"
        android:hint="Número" />

    <EditText
        android:id="@+id/editTextComplemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextNumero"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Complemento" />

    <EditText
        android:id="@+id/editTextCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextComplemento"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Cidade" />

    <EditText
        android:id="@+id/editTextUf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextCidade"
        android:layout_below="@+id/editTextCidade"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="UF" />

</RelativeLayout>
